{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "preserveConstEnums": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "prism-agent/*": ["prism-agent/*"],
      "pluto/*": ["pluto/*"],
      "mercury/*": ["mercury/*"],
      "config/*": ["config/*"],
      "castor/*": ["castor/*"],
      "apollo/*": ["apollo/*"],
      "demos/*": ["demos/*"],
      "domain/*": ["domain/*"],
      "pollux/*": ["pollux/*"],
      "peer-did/*": ["peer-did/*"]
    },
    "rootDirs": [
      "prism-agent",
      "pluto",
      "mercury",
      "config",
      "castor",
      "apollo",
      "demos",
      "domain",
      "pollux",
      "peer-did"
    ]
  },
  "include": [
    "prism-agent",
    "pluto",
    "mercury",
    "config",
    "castor",
    "apollo",
    "demos",
    "domain",
    "pollux",
    "peer-did",
    "tests"
  ],
  "exclude": [
    "build"
  ]
}
